{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false,
        "declaration": true,
        "removeComments": false,
        "types": [ "joi", "reflect-metadata", "mocha", "chai"],
        "outDir": "lib"
    },
    "files": ["src/index.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
